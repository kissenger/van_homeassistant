[Unit]
Description = Python script monitoring GPIO pins for home assistant

[Service]
Type = simple
ExecStart = python /home/gordon/proj/python/pygpio.py
WorkingDirectory = /home/gordon/proj/python
User = gordon
Restart = always
RestartSec = 15
SyslogIdentifier = pygpio
KillSignal=SIGINT

[Install]
WantedBy = multi-user.target
